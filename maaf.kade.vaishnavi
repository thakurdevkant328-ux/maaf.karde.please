<script>
    // --- Scroll Animation Observer ---
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, { threshold: 0.1 });
    document.querySelectorAll('section').forEach(section => {
        observer.observe(section);
    });

    // --- Hearts Animation ---
    function createHearts() {
        const container = document.getElementById('bg-hearts');
        for(let i=0; i<20; i++) {
            let heart = document.createElement('div');
            heart.innerHTML = '‚ù§';
            heart.className = 'heart-bg';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = (Math.random() * 10 + 10) + 's';
            heart.style.fontSize = (Math.random() * 30 + 15) + 'px';
            container.appendChild(heart);
        }
    }
    createHearts();

    // --- Start ---
    function startExperience() {
        document.getElementById('start-overlay').style.opacity = '0';
        setTimeout(() => {
            document.getElementById('start-overlay').style.display = 'none';
            document.getElementById('main-content').style.display = 'block';
            // Trigger scroll animation for first sections
            document.querySelectorAll('section').forEach(sec => {
                 if(sec.getBoundingClientRect().top < window.innerHeight) sec.classList.add('visible');
            });
        }, 500);
        
        const music = document.getElementById('bg-music');
        music.volume = 0.4;
        music.play().catch(error => console.log("Audio play failed due to browser policy"));
        startChat();
    }

    // --- Timer (Aug 2, 2025) ---
    const startDate = new Date(2025, 7, 2); 
    setInterval(() => {
        const now = new Date();
        const diff = now - startDate;
        if (diff < 0) {
            document.getElementById("timer").innerText = "Waiting for August 2, 2025...";
            return;
        }
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        document.getElementById("timer").innerText = `${days} Days, ${hours} Hours, ${minutes} Min`;
    }, 1000);

    // --- Mood Slider ---
    function updateMood() {
        const val = document.getElementById('moodRange').value;
        const text = document.getElementById('mood-text');
        if(val > 80) text.innerText = "üò° I am furious!";
        else if(val > 50) { text.innerText = "üò† I am still upset."; text.style.color = "#ff8fa3"; }
        else { text.innerText = "üíñ I might forgive you..."; text.style.color = "#d4af37"; }
    }

    // --- Chat ---
    const messages = [
        { text: "Vaishnavi...", delay: 500 },
        { text: "I know you're hurt.", delay: 2500 },
        { text: "Please just scroll down and read everything.", delay: 4500 },
        { text: "It's all I ask.", delay: 6500 }
    ];
    function startChat() {
        const chatBox = document.getElementById('chat-box');
        let index = 0;
        function addMessage() {
            if (index < messages.length) {
                const msgDiv = document.createElement('div');
                msgDiv.className = `msg sent`;
                msgDiv.innerHTML = `${messages[index].text}`;
                chatBox.appendChild(msgDiv);
                setTimeout(() => msgDiv.classList.add('show'), 50);
                chatBox.scrollTop = chatBox.scrollHeight;
                index++;
                if (index < messages.length) setTimeout(addMessage, messages[index-1].delay);
                else setTimeout(() => document.getElementById('wa-btn').style.display = 'block', 3000);
            }
        }
        addMessage();
    }

    // --- Promise Jar (Improved Interaction) ---
    const promises = [
        "I promise to listen more and speak less.",
        "I promise to never take you for granted again.",
        "I promise unlimited Momos dates.",
        "I promise to focus on 'Us' vs the problem.",
        "I promise to make you feel secure and loved.",
        "I promise to support your dreams, always."
    ];
    function showPromise() {
        const display = document.getElementById('promise-display');
        // Reset animation
        display.style.display = 'none';
        display.offsetHeight; /* trigger reflow */
        
        const randomPromise = promises[Math.floor(Math.random() * promises.length)];
        display.style.display = 'block';
        display.innerText = "‚ú® " + randomPromise;
        triggerConfetti(10);
    }

    // --- Coupon & Confetti ---
    function openCoupon() {
        document.getElementById('coupon').style.display = 'block';
        triggerConfetti(60);
    }
    function triggerConfetti(count) {
        for(let i=0; i<count; i++) {
            let c = document.createElement("div");
            c.className = "confetti";
            c.style.left = Math.random() * 100 + "vw";
            c.style.background = ["#d4af37", "#ff8fa3", "#fff", "gold"][Math.floor(Math.random()*4)];
            c.style.animationDuration = (Math.random() * 3 + 2) + "s";
            document.body.appendChild(c);
            setTimeout(() => c.remove(), 5000);
        }
    }
</script>
